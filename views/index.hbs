<h1 class="text-center mb-4">{{title}}</h1>
<h4>Employee Details</h4>

<form action="/api/employees" method="POST" class="mb-4">
<div class="form-group">
    <label for="name">Employee Name</label>       
    <input type="text" name="name" class="form-control">
</div>

<div class="form-group">
    <label for="designation">Designation</label>
    <input type="text" name="designation" class="form-control">
</div>
<input type="submit" value="Add-Member" class="btn btn-primary btn-block">

</form>
<ul class="list-group">
    {{#each employeeDetails}}
    <li class="list-group-item">{{this.name}}:{{this.designation}}</li>
    {{/each}}
</ul>

<a href="api/employees" class="btn btn-light mt-4">Visit JSON</a>